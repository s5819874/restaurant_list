<div class="text-white">

  <h1 class="mt-3 font-weight-bold text-center">{{restaurant.name}}</h1>

  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto" id="item">
        <a class="btn btn-outline-danger btn-sm mb-2 mr-2" href="/restaurants/{{ restaurant._id }}/edit">edit</a>
        <form action="/restaurants/{{ restaurant._id }}/delete" method="POST" style="display: inline;">
          <button class="btn btn-outline-danger btn-sm mb-2" type="submit">delete</button>
          <p class="mb-1 mt-2">
            <span class="text-light font-weight-bold">
              <i class="fas fa-utensils pr-2"></i>
              類別：
            </span>
            {{restaurant.category}}
          </p>

          <p class="mb-1">
            <span class="text-light font-weight-bold">
              <i class="fas fa-map-marker-alt pr-2"></i>
              地址：
            </span>
            {{restaurant.location}}
            <a href="{{restaurant.goole_map}}" class="text-info" target="_blank">
              <i class="fas fa-location-arrow pr-2 fa-xs"></i>
            </a>
          </p>

          <p class="mb-1">
            <span class="text-light font-weight-bold">
              <i class="fas fa-mobile-alt pr-2"></i>
              電話：
            </span>
            {{restaurant.phone}}
          </p>

          <p class="mt-5 mb-5 font-italic text-center">
            {{restaurant.description}}
          </p>

          <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" style=" max-width: 600px;">
      </div>
    </div>
  </div>
</div>