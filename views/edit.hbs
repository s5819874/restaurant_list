<div class="form-bg">
  <form action="/restaurants/{{ restaurant._id }}/edit" method="POST">

    <div class="input-group flex-nowrap pt-2" style="max-width: 50%; margin: auto auto;">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">餐廳名稱</span>
      </div>
      <input type="text" class="form-control bg-dark text-white" name="name" placeholder={{restaurant.name}}
        value={{restaurant.name}}>
    </div>

    <div class="input-group flex-nowrap pt-2" style="max-width: 50%; margin: auto auto;">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">餐廳電話</span>
      </div>
      <input type="text" class="form-control bg-dark text-white" name="phone" placeholder={{restaurant.phone}}
        value={{restaurant.phone}}>
    </div>

    <div class="input-group flex-nowrap pt-2" style="max-width: 50%; margin: auto auto;">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">餐廳評分</span>
      </div>
      <input type="text" class="form-control bg-dark text-white" name="rating" placeholder={{restaurant.rating}}
        value={{restaurant.rating}}>
    </div>

    <div class="input-group flex-nowrap pt-2" style="max-width: 50%; margin: auto auto;">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">餐廳位置</span>
      </div>
      <input type="text" class="form-control bg-dark text-white" name="google_map" placeholder={{restaurant.google_map}}
        value={{restaurant.google_map}}>
    </div>

    <div class="input-group flex-nowrap pt-2" style="max-width: 50%; margin: auto auto;">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">餐廳地址</span>
      </div>
      <input type="text" class="form-control bg-dark text-white" name="location" placeholder={{restaurant.location}}
        value={{restaurant.location}}>
    </div>

    <div class="input-group flex-nowrap pt-2" style="max-width: 50%; margin: auto auto;">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">餐廳類別</span>
      </div>
      <input type="text" class="form-control bg-dark text-white" placeholder={{restaurant.category}} name="category"
        value={{restaurant.category}}>
    </div>

    <div class="input-group flex-nowrap pt-2" style="max-width: 50%; margin: auto auto;">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">餐廳描述</span>
      </div>
      <input type="text" class="form-control bg-dark text-white" placeholder={{restaurant.description}}
        name="description" value={{restaurant.description}}>
    </div>

    <div class="input-group flex-nowrap pt-2" style="max-width: 50%; margin: auto auto;">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">圖片連結</span>
      </div>
      <input type="text" class="form-control bg-dark text-white" name="image" placeholder={{restaurant.image}}
        value={{restaurant.image}}>
    </div>

    <div class="d-flex justify-content-center mt-3" style="width: 100%;">
      <button class="btn btn-danger mr-5" type="submit">Save</button>
      <a href="/" class="btn btn-danger" type="submit">Back</button>
    </div>
  </form>
</div>