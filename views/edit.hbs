<form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
  <input type="text" placeholder={{restaurant.name}} name="name" value={{restaurant.name}}>
  <input type="text" placeholder={{restaurant.name_en}} name="name_en" value={{restaurant.name_en}}>
  <input type="text" placeholder={{restaurant.phone}} name="phone" value={{restaurant.phone}}>
  <input type="number" placeholder={{restaurant.rating}} name="rating" value={{restaurant.rating}}>
  <input type="text" placeholder={{restaurant.google_map}} name="google_map" value={{restaurant.google_map}}>
  <input type="text" placeholder={{restaurant.category}} name="category" value={{restaurant.category}}>
  <input type="text" placeholder={{restaurant.image}} name="image" value={{restaurant.image}}>
  <input type="text" placeholder={{restaurant.location}} name=location value={{restaurant.location}}>
  <input type="text" placeholder={{restaurant.description}} name="description" value={{restaurant.description}}>
  <button type="submit">Save</button>
  <a href="/">back</a>
</form>